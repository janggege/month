<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/b"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="@mipmap/tx" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/flayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ftext1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/text"
            android:gravity="center"
            android:text="我是吃不胖的小姐姐"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal">

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/grzlwdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的资料"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/wdqzwdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的圈子"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/zjwdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的足迹"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/wdqbwdf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的钱包"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal"

            >

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/shdzwdf" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的收货地址"
                android:textSize="19dp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>